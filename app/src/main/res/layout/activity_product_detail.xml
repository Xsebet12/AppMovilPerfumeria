<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/white"
    android:paddingBottom="24dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">
        <Space
            android:layout_width="match_parent"
            android:layout_height="44dp" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="22sp"
            android:textColor="@color/dorado_secundario"/>

        <TextView
            android:id="@+id/tvSku"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dorado_secundario"
            android:textStyle="bold"
            android:paddingTop="4dp"/>

        <TextView
            android:id="@+id/tvMarca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:paddingTop="2dp"/>

        <TextView
            android:id="@+id/tvCategoria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"/>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_marginTop="12dp"/>

        <TextView
            android:id="@+id/tvDescripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:paddingTop="12dp"/>

        <TextView
            android:id="@+id/tvPresentacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:paddingTop="4dp"/>

        <TextView
            android:id="@+id/tvMl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:paddingTop="4dp"/>

        <TextView
            android:id="@+id/tvStock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:paddingTop="4dp"/>

        <TextView
            android:id="@+id/tvTipoPrecio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/dorado_secundario"
            android:textStyle="bold"
            android:paddingTop="16dp"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tvPrecioValor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/dorado_secundario"
            android:textStyle="bold"
            android:textSize="24sp"
            android:paddingTop="4dp"/>

        <TextView
            android:id="@+id/tvPrecioReferencia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:paddingTop="2dp"/>

        <TextView
            android:id="@+id/tvCantidadLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cantidad"
            android:textColor="@color/dorado_secundario"
            android:paddingTop="12dp"/>

        <EditText
            android:id="@+id/etCantidad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="1"
            android:ems="4"
            android:textColor="@color/black"
            android:textColorHint="@color/dorado_oscuro"
            android:backgroundTint="@color/dorado_secundario"/>

        <ProgressBar
            android:id="@+id/progresoDetalle"
            style="@android:style/Widget.ProgressBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:visibility="gone"/>

        <Button
            android:id="@+id/btnAgregarCarrito"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Agregar al carrito"
            android:layout_marginTop="20dp"
            style="@style/AppButton.Gold"/>

        <!-- BotÃ³n Modificar removido para vista cliente; disponible solo en detalle admin -->
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
