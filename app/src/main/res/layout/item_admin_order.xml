<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@android:color/transparent">

    <Space
        android:layout_width="match_parent"
        android:layout_height="5dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvOrdenTitulo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/orden_numero"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tvEstadoPago"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/estado_pago"
            android:textColor="@color/dorado_secundario"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tvCliente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/cliente_label"
        android:textColor="@color/black"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/tvFecha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/fecha_label"
        android:textColor="@color/black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="2dp"
        android:gravity="start|center_vertical">
        <TextView
            android:id="@+id/tvIconDollar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textStyle="bold"
            android:textColor="@color/dorado_secundario"
            android:textSize="18sp"
            android:layout_marginRight="6dp"/>

        <TextView
            android:id="@+id/tvTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/dorado_secundario"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvEstadoEnvio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/estado_envio"
        android:textColor="@color/black"
        android:layout_marginTop="2dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal">

        <ProgressBar
            android:id="@+id/pbAccion"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="8dp"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="8dp">
            <Button
                android:id="@+id/btnVerResumen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/dorado_secundario"
                android:text="@string/ver_resumen"
                android:tint="@color/white" />
            <Button
                android:id="@+id/btnRechazar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:backgroundTint="@color/dorado_secundario"
                android:text="@string/rechazar_pago"
                android:tint="@color/white" />
        </LinearLayout>

        <Button
            android:id="@+id/btnAceptar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:backgroundTint="@color/dorado_secundario"
            android:text="@string/aceptar_pago"
            android:tint="@color/white" />

        <Button
            android:id="@+id/btnMarcarEnviado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:backgroundTint="@color/dorado_secundario"
            android:text="@string/marcar_enviado"
            android:tint="@color/white" />

        <Button
            android:id="@+id/btnMarcarEntregado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:backgroundTint="@color/dorado_secundario"
            android:text="@string/marcar_entregado"
            android:tint="@color/white" />


        </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="#22FFFFFF"/>

</LinearLayout>
